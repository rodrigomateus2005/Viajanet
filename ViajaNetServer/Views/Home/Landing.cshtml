@model Produto[] 
@{
    ViewData["Title"] = "Home";
}

<form method="post">

    <div class="text-center">
        <h1 class="display-4">Promoção</h1>
        <p class="lead">Aproveite essa oportunidade</p>
    </div>

    <div class="container">
        <div class="card-deck mb-3 text-center">
            @foreach (var produto in Model) {
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@Html.DisplayFor(x => produto.Nome)</h4>
                </div>
                <div class="card-body">
                    <input type="hidden" name="idProdutoViajar" value="@produto.Id" />
                    <h3 class="card-title pricing-card-title">de: R$ @Html.DisplayFor(x => produto.Preco)</h3>
                    <h1 class="card-title pricing-card-title">por: R$ @Html.DisplayFor(x => produto.PrecoPromocao)</h1>
                    <button type="submit" asp-controller="Home" asp-action="Viajar" class="btn btn-lg btn-block btn-outline-primary">Viajar</button>
                </div>
            </div>
            }
        </div>
    </div>

</form>